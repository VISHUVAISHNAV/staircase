def vishu(n):
    for i in range(1,n+1):
        print(" "*(n-i),end="")
        if i==1:
            print("☆",end="")
        else:
            [print("♤"*2,end="") for j in range(1,i+1)]
        print()
    [print("           |  |             ") for i in range(4)]
    print("♡","HAPPY NEW YEAR ","♡")
vishu(15)

